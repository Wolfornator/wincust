<Window x:Class="WinCust.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCust"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="WinCust" Height="625" Width="585">
    <Grid Background="#FFFFEAF9" Margin="0,0,0,9">
        <Button x:Name="uninstall" Content="Uninstall" Margin="0,433,0,0" FontSize="48" Height="87" VerticalAlignment="Top" Background="#FFEAF6FF" IsEnabled="False" Click="uninstall_Click"/>
        <Button x:Name="reinstall" Content="Reinstall" Margin="0,331,0,0" FontSize="48" Click="Button_Click_1" Height="87" VerticalAlignment="Top" Background="#FFEAF6FF" IsEnabled="False"/>
        <Button x:Name="install" Content="Install" Margin="0,229,0,0" FontSize="48" Click="Button_Click" Height="87" VerticalAlignment="Top" Background="#FFEAF6FF" IsEnabled="False"/>
        <Label Content="WinCust" FontSize="72" Margin="0,10,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="219" VerticalAlignment="Top" Background="{x:Null}"/>
        <Button Content="Exit" Margin="0,534,0,-10" FontSize="36" Background="#FFFF6666" Foreground="Black" Click="Button_Click_2"/>
    </Grid>
</Window>
